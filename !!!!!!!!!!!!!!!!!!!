                            scanf(" %c", &cdv);
                            if (cdv == '0'){
                                luna();
                                continue;
                            }
                            else if (cdv == '1'){
                                if (produtocad !=0){
                                    printf(" %s: R$", produto);
                                    scanf(" %f", &preco);
                                    printf(" Preco cadastrado;)\n");
                                    continue;
                        }
                            else{
                                printf(" Nenhum produto cadastrado recentemente :(\n");
                                continue;
                        }
